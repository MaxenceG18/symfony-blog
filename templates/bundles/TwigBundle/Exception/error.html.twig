{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }} - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-4 fw-bold text-secondary">Erreur {{ status_code }}</h1>
                    <p class="lead text-muted mb-4">{{ status_text }}</p>
                    <p class="text-muted">Une erreur inattendue s'est produite. Veuillez réessayer plus tard.</p>
                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door me-2"></i>Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
