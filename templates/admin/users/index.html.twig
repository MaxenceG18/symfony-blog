{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people me-2"></i>Gestion des utilisateurs</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Utilisateur</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Statut</th>
                            <th>Inscrit le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if user.profilePicture %}
                                        <img src="{{ user.profilePicture }}" class="author-avatar me-2">
                                    {% else %}
                                        <div class="avatar-placeholder avatar-sm me-2">
                                            {{ user.firstName|first }}{{ user.lastName|first }}
                                        </div>
                                    {% endif %}
                                    <div>
                                        <strong>{{ user.fullName }}</strong>
                                        {% if user == app.user %}
                                            <span class="badge bg-info ms-1">Vous</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.isAdmin %}
                                    <span class="badge bg-danger">Admin</span>
                                {% elseif user.isAuthor %}
                                    <span class="badge bg-info">Auteur</span>
                                {% else %}
                                    <span class="badge bg-primary">Utilisateur</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {% if user != app.user %}
                                    {# Activation/Deactivation #}
                                    {% if user.isActive %}
                                        <form action="{{ path('app_admin_user_deactivate', {id: user.id}) }}" method="post" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('deactivate' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Désactiver">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        </form>
                                    {% else %}
                                        <form action="{{ path('app_admin_user_activate', {id: user.id}) }}" method="post" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-success" title="Activer">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                    {% endif %}

                                    {# Toggle Admin Role #}
                                    <form action="{{ path('app_admin_user_toggle_admin', {id: user.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-admin' ~ user.id) }}">
                                        {% if user.isAdmin %}
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Retirer le rôle admin">
                                                <i class="bi bi-shield-x"></i>
                                            </button>
                                        {% else %}
                                            <button type="submit" class="btn btn-sm btn-outline-primary" title="Promouvoir admin">
                                                <i class="bi bi-shield-plus"></i>
                                            </button>
                                        {% endif %}
                                    </form>

                                    {# Toggle Author Role #}
                                    {% if not user.isAdmin %}
                                    <form action="{{ path('app_admin_user_toggle_author', {id: user.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-author' ~ user.id) }}">
                                        {% if user.isAuthor %}
                                            <button type="submit" class="btn btn-sm btn-outline-info" title="Retirer le rôle auteur">
                                                <i class="bi bi-pencil-fill"></i>
                                            </button>
                                        {% else %}
                                            <button type="submit" class="btn btn-sm btn-info" title="Promouvoir auteur">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        {% endif %}
                                    </form>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted small">-</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">Aucun utilisateur</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-body">
                <h6><i class="bi bi-info-circle me-2"></i>Légende des actions</h6>
                <div class="d-flex flex-wrap gap-3">
                    <span><i class="bi bi-check-circle text-success"></i> Activer le compte</span>
                    <span><i class="bi bi-pause-circle text-warning"></i> Désactiver le compte</span>
                    <span><i class="bi bi-shield-plus text-primary"></i> Promouvoir administrateur</span>
                    <span><i class="bi bi-shield-x text-danger"></i> Retirer les droits admin</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
