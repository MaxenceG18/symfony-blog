{% extends 'base.html.twig' %}

{% block title %}Demandes d'auteur - Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-pencil-square me-2"></i>Demandes d'auteur
            {% if pendingCount > 0 %}
                <span class="badge bg-warning text-dark">{{ pendingCount }} en attente</span>
            {% endif %}
        </h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Utilisateur</th>
                            <th>Motivation</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for req in requests %}
                        <tr class="{{ req.isPending ? 'table-warning' : '' }}">
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if req.user.profilePicture %}
                                        <img src="{{ req.user.profilePicture }}" class="author-avatar me-2" alt="{{ req.user.fullName }}">
                                    {% else %}
                                        <div class="avatar-placeholder me-2">
                                            {{ req.user.firstName|first }}{{ req.user.lastName|first }}
                                        </div>
                                    {% endif %}
                                    <div>
                                        <strong>{{ req.user.fullName }}</strong>
                                        <br>
                                        <small class="text-muted">{{ req.user.email }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if req.motivation %}
                                    <small>{{ req.motivation|length > 100 ? req.motivation|slice(0, 100) ~ '...' : req.motivation }}</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <small>{{ req.createdAt|date('d/m/Y H:i') }}</small>
                            </td>
                            <td>
                                <span class="badge {{ req.status.badgeClass }}">
                                    {{ req.status.label }}
                                </span>
                            </td>
                            <td>
                                {% if req.isPending %}
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#acceptModal{{ req.id }}">
                                            <i class="bi bi-check-lg"></i> Accepter
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal{{ req.id }}">
                                            <i class="bi bi-x-lg"></i> Refuser
                                        </button>
                                    </div>
                                {% else %}
                                    <small class="text-muted">
                                        {% if req.respondedAt %}
                                            Traité le {{ req.respondedAt|date('d/m/Y') }}
                                            {% if req.respondedBy %}
                                                par {{ req.respondedBy.fullName }}
                                            {% endif %}
                                        {% endif %}
                                    </small>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Aucune demande</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% for req in requests %}
    {% if req.isPending %}
    <div class="modal fade" id="acceptModal{{ req.id }}" tabindex="-1" aria-labelledby="acceptModalLabel{{ req.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ path('app_admin_author_request_accept', {id: req.id}) }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ req.id) }}">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="acceptModalLabel{{ req.id }}">Accepter la demande</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        <p>
                            <strong>{{ req.user.fullName }}</strong> deviendra auteur et pourra créer des articles.
                        </p>
                        <div class="mb-3">
                            <label for="comment{{ req.id }}" class="form-label">Commentaire (facultatif)</label>
                            <textarea name="comment" id="comment{{ req.id }}" class="form-control" rows="2" placeholder="Message pour l'utilisateur..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>Accepter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="rejectModal{{ req.id }}" tabindex="-1" aria-labelledby="rejectModalLabel{{ req.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ path('app_admin_author_request_reject', {id: req.id}) }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ req.id) }}">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="rejectModalLabel{{ req.id }}">Refuser la demande</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        <p>Vous allez refuser la demande de <strong>{{ req.user.fullName }}</strong>.</p>
                        <div class="mb-3">
                            <label for="rejectComment{{ req.id }}" class="form-label">Raison du refus (facultatif)</label>
                            <textarea name="comment" id="rejectComment{{ req.id }}" class="form-control" rows="2" placeholder="Expliquez pourquoi la demande est refusée..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-lg me-1"></i>Refuser
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {% endif %}
{% endfor %}
{% endblock %}
