{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories - Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-tags me-2"></i>Gestion des catégories</h1>
        <div>
            <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle me-2"></i>Nouvelle catégorie
            </a>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Slug</th>
                            <th>Description</th>
                            <th>Articles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in categories %}
                            {% set category = item[0] is defined ? item[0] : item %}
                            {% set count = item.postCount is defined ? item.postCount : category.posts|length %}
                        <tr>
                            <td><strong>{{ category.name }}</strong></td>
                            <td><code>{{ category.slug }}</code></td>
                            <td>{{ category.description ? (category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description) : '-' }}</td>
                            <td>
                                <span class="badge bg-secondary">{{ count }}</span>
                            </td>
                            <td>
                                <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="{{ path('app_admin_category_delete', {id: category.id}) }}" method="post" class="d-inline"
                                      onsubmit="return confirm('{% if count > 0 %}ATTENTION : Cette catégorie contient {{ count }} article(s) qui seront également supprimés. {% endif %}Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Aucune catégorie</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
