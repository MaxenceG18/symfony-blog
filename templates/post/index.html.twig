{% extends 'base.html.twig' %}

{% block title %}Articles - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        {# Main Content #}
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-file-text me-2"></i>
                    {% if searchQuery %}
                        Résultats pour "{{ searchQuery }}"
                    {% elseif currentCategory %}
                        Articles
                    {% else %}
                        Tous les articles
                    {% endif %}
                </h1>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_post_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nouvel article
                </a>
                {% endif %}
            </div>

            {# Search Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <form action="{{ path('app_post_index') }}" method="get">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Rechercher un article..." 
                                   value="{{ searchQuery }}">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {% if pagination.items is empty %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    {% if searchQuery %}
                        Aucun article trouvé pour "{{ searchQuery }}".
                    {% else %}
                        Aucun article pour le moment.
                    {% endif %}
                </div>
            {% else %}
                {% for post in pagination %}
                <div class="card mb-4">
                    <div class="row g-0">
                        <div class="col-md-4">
                            {% if post.picture %}
                                <img src="{{ post.picture }}" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="{{ post.title }}">
                            {% else %}
                                <div class="bg-secondary h-100 d-flex align-items-center justify-content-center rounded-start" style="min-height: 200px;">
                                    <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="card-body h-100 d-flex flex-column">
                                <div class="mb-2">
                                    <a href="{{ path('app_category_show', {slug: post.category.slug}) }}" class="badge bg-primary text-decoration-none">
                                        {{ post.category.name }}
                                    </a>
                                </div>
                                <h5 class="card-title">
                                    <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="text-decoration-none text-dark">
                                        {{ post.title }}
                                    </a>
                                </h5>
                                <p class="card-text text-muted flex-grow-1">{{ post.excerpt(150) }}</p>
                                <div class="d-flex align-items-center justify-content-between mt-auto">
                                    <div class="d-flex align-items-center">
                                        {% if post.author.profilePicture %}
                                            <img src="{{ post.author.profilePicture }}" class="author-avatar me-2" alt="{{ post.author.fullName }}">
                                        {% else %}
                                            <div class="avatar-placeholder avatar-sm me-2">
                                                {{ post.author.firstName|first }}{{ post.author.lastName|first }}
                                            </div>
                                        {% endif %}
                                        <small class="text-muted">{{ post.author.fullName }}</small>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>{{ post.publishedAt|date('d/m/Y') }}
                                        </small>
                                        <div class="mt-1">
                                            <small class="text-muted me-2">
                                                <i class="bi bi-heart-fill text-danger"></i> {{ post.likeCount }}
                                            </small>
                                            <small class="text-muted me-2">
                                                <i class="bi bi-eye"></i> {{ post.viewCount }}
                                            </small>
                                            <small class="text-muted">
                                                <i class="bi bi-chat"></i> {{ post.approvedComments|length }}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                
                                {% if is_granted('ROLE_ADMIN') %}
                                <div class="mt-3 pt-3 border-top">
                                    <a href="{{ path('app_post_edit', {slug: post.slug}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form action="{{ path('app_post_delete', {slug: post.slug}) }}" method="post" class="d-inline" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <small class="text-muted">
                        {{ pagination.getTotalItemCount }} article(s) trouvé(s)
                    </small>
                    <div class="pagination-container">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            {% endif %}
        </div>

        {# Sidebar #}
        <div class="col-lg-4">
            {# Categories Filter #}
            <div class="sidebar-widget">
                <h5><i class="bi bi-funnel me-2"></i>Filtrer par catégorie</h5>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_post_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{ not currentCategory ? 'active' : '' }}">
                        Toutes les catégories
                    </a>
                    {% for category in categories %}
                    <a href="{{ path('app_post_index', {category: category.slug}) }}" 
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{ currentCategory == category.slug ? 'active' : '' }}">
                        {{ category.name }}
                        <span class="badge bg-secondary">{{ category.posts|length }}</span>
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
