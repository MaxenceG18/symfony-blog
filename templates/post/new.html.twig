{% extends 'base.html.twig' %}

{% block title %}Nouvel article - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Créer un nouvel article</h4>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.category) }}
                            {{ form_widget(form.category) }}
                            {{ form_errors(form.category) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.picture) }}
                            {{ form_widget(form.picture) }}
                            {{ form_errors(form.picture) }}
                            <small class="text-muted">Entrez l'URL d'une image pour illustrer votre article</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content) }}
                            {{ form_errors(form.content) }}
                        </div>

                        {# Section co-auteurs dynamique #}
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-people me-1"></i>Inviter des co-auteurs
                            </label>
                            
                            <div id="collaborators-container">
                                {# Les sélecteurs de collaborateurs seront ajoutés ici #}
                            </div>
                            
                            <button type="button" id="add-collaborator" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="bi bi-plus-circle me-1"></i>Ajouter un co-auteur
                            </button>
                            
                            <small class="text-muted d-block mt-2">
                                Les co-auteurs sélectionnés recevront une demande de collaboration à accepter.
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Publier l'article
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('collaborators-container');
    const addButton = document.getElementById('add-collaborator');
    
    // Liste des utilisateurs disponibles (passée depuis le contrôleur)
    const availableUsers = {{ available_collaborators|json_encode|raw }};
    
    let collaboratorIndex = 0;
    const selectedCollaborators = new Set();
    
    function updateSelectOptions() {
        document.querySelectorAll('.collaborator-select').forEach(select => {
            const currentValue = select.value;
            select.innerHTML = '<option value="">-- Choisir un co-auteur --</option>';
            
            availableUsers.forEach(user => {
                if (!selectedCollaborators.has(user.id.toString()) || currentValue === user.id.toString()) {
                    const option = document.createElement('option');
                    option.value = user.id;
                    option.textContent = user.name;
                    if (currentValue === user.id.toString()) {
                        option.selected = true;
                    }
                    select.appendChild(option);
                }
            });
        });
    }
    
    function addCollaboratorField(userId = '') {
        const wrapper = document.createElement('div');
        wrapper.className = 'input-group mb-2 collaborator-row';
        wrapper.innerHTML = `
            <select name="collaborators[]" class="form-select collaborator-select" data-index="${collaboratorIndex}">
                <option value="">-- Choisir un co-auteur --</option>
            </select>
            <button type="button" class="btn btn-outline-danger remove-collaborator" title="Retirer">
                <i class="bi bi-x-lg"></i>
            </button>
        `;
        
        container.appendChild(wrapper);
        const select = wrapper.querySelector('select');
        
        availableUsers.forEach(user => {
            if (!selectedCollaborators.has(user.id.toString()) || userId === user.id.toString()) {
                const option = document.createElement('option');
                option.value = user.id;
                option.textContent = user.name;
                if (userId === user.id.toString()) {
                    option.selected = true;
                    selectedCollaborators.add(userId);
                }
                select.appendChild(option);
            }
        });
        
        select.addEventListener('change', function() {
            const oldValue = this.dataset.selectedValue;
            if (oldValue) selectedCollaborators.delete(oldValue);
            
            if (this.value) {
                selectedCollaborators.add(this.value);
                this.dataset.selectedValue = this.value;
            } else {
                delete this.dataset.selectedValue;
            }
            updateSelectOptions();
        });
        
        wrapper.querySelector('.remove-collaborator').addEventListener('click', function() {
            if (select.value) selectedCollaborators.delete(select.value);
            wrapper.remove();
            updateSelectOptions();
            if (selectedCollaborators.size < availableUsers.length) addButton.disabled = false;
        });
        
        collaboratorIndex++;
        if (selectedCollaborators.size >= availableUsers.length) addButton.disabled = true;
    }
    
    addButton.addEventListener('click', function() {
        addCollaboratorField();
    });
    
    if (availableUsers.length === 0) {
        addButton.disabled = true;
        addButton.innerHTML = '<i class="bi bi-info-circle me-1"></i>Aucun utilisateur disponible';
    }
});
</script>
{% endblock %}
