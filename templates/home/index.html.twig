{% extends 'base.html.twig' %}

{% block title %}Accueil - Mon Blog{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-3">Bienvenue sur Mon Blog</h1>
            <p class="lead mb-4">Découvrez nos articles, partagez vos idées et rejoignez notre communauté</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_post_index') }}" class="btn btn-light btn-lg">
                    <i class="bi bi-file-text me-2"></i>Voir les articles
                </a>
                {% if not app.user %}
                <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-person-plus me-2"></i>S'inscrire
                </a>
                {% endif %}
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="row">
            {# Main Content #}
            <div class="col-lg-8">
                <h2 class="mb-4">
                    <i class="bi bi-clock-history me-2"></i>Derniers articles
                </h2>
                
                {% if latestPosts is empty %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>Aucun article pour le moment.
                    </div>
                {% else %}
                    <div class="row">
                        {% for post in latestPosts %}
                        <div class="col-md-6 mb-4">
                            <div class="card post-card h-100 position-relative">
                                {% if post.picture %}
                                    <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
                                {% else %}
                                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                                    </div>
                                {% endif %}
                                
                                <span class="badge bg-primary category-badge">
                                    {{ post.category.name }}
                                </span>
                                
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="text-decoration-none text-dark">
                                            {{ post.title }}
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">{{ post.excerpt(100) }}</p>
                                </div>
                                
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            {% if post.author.profilePicture %}
                                                <img src="{{ post.author.profilePicture }}" class="author-avatar me-2" alt="{{ post.author.fullName }}">
                                            {% else %}
                                                <div class="avatar-placeholder avatar-sm me-2">
                                                    {{ post.author.firstName|first }}{{ post.author.lastName|first }}
                                                </div>
                                            {% endif %}
                                            <small class="text-muted">{{ post.author.firstName }}</small>
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            {{ post.publishedAt|date('d/m/Y') }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="{{ path('app_post_index') }}" class="btn btn-primary">
                            Voir tous les articles <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                {% endif %}
            </div>
            
            {# Sidebar #}
            <div class="col-lg-4">
                {# Categories Widget #}
                <div class="sidebar-widget">
                    <h5><i class="bi bi-tags me-2"></i>Catégories</h5>
                    {% if categories is empty %}
                        <p class="text-muted mb-0">Aucune catégorie</p>
                    {% else %}
                        <ul class="list-unstyled mb-0">
                            {% for item in categories %}
                                {% set category = item[0] is defined ? item[0] : item %}
                                {% set count = item.postCount is defined ? item.postCount : category.posts|length %}
                                <li class="mb-2">
                                    <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="text-decoration-none d-flex justify-content-between align-items-center">
                                        <span>{{ category.name }}</span>
                                        <span class="badge bg-secondary">{{ count }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                
                {# About Widget #}
                <div class="sidebar-widget">
                    <h5><i class="bi bi-info-circle me-2"></i>À propos</h5>
                    <p class="text-muted mb-0">
                        Bienvenue sur notre blog ! Ici, nous partageons des articles sur divers sujets. 
                        N'hésitez pas à vous inscrire pour participer à la discussion.
                    </p>
                </div>
                
                {# Quick Actions for Admin #}
                {% if is_granted('ROLE_ADMIN') %}
                <div class="sidebar-widget">
                    <h5><i class="bi bi-lightning me-2"></i>Actions rapides</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_post_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nouvel article
                        </a>
                        <a href="{{ path('app_admin_categories') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-tags me-2"></i>Gérer les catégories
                        </a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
