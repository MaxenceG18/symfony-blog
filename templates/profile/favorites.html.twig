{% extends 'base.html.twig' %}

{% block title %}Mes favoris - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-heart-fill text-danger me-2"></i>Mes favoris</h1>
        <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au profil
        </a>
    </div>

    {% if likedPosts|length > 0 %}
        <div class="row">
            {% for post in likedPosts %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if post.picture %}
                    <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 180px; object-fit: cover;">
                    {% else %}
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 180px;">
                        <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                    </div>
                    {% endif %}
                    
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <a href="{{ path('app_category_show', {slug: post.category.slug}) }}" class="badge bg-primary text-decoration-none">
                                {{ post.category.name }}
                            </a>
                        </div>
                        
                        <h5 class="card-title">
                            <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="text-decoration-none text-dark">
                                {{ post.title }}
                            </a>
                        </h5>
                        
                        <p class="card-text text-muted flex-grow-1">
                            {{ post.excerpt(100) }}
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>{{ post.publishedAt|date('d/m/Y') }}
                            </small>
                            <div>
                                <span class="text-muted me-2">
                                    <i class="bi bi-heart-fill text-danger"></i> {{ post.likeCount }}
                                </span>
                                <span class="text-muted">
                                    <i class="bi bi-eye"></i> {{ post.viewCount }}
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>Lire
                            </a>
                            <form action="{{ path('app_post_like', {slug: post.slug}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('like' ~ post.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Retirer des favoris">
                                    <i class="bi bi-heart-break me-1"></i>Retirer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Aucun favori pour le moment</h4>
            <p class="text-muted">Cliquez sur le cœur d'un article pour l'ajouter à vos favoris.</p>
            <a href="{{ path('app_post_index') }}" class="btn btn-primary mt-2">
                <i class="bi bi-newspaper me-2"></i>Découvrir les articles
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
