{% extends 'base.html.twig' %}

{% block title %}Mon profil - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            {# Profile Card #}
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    {% if user.profilePicture %}
                        <img src="{{ user.profilePicture }}" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="{{ user.fullName }}">
                    {% else %}
                        <div class="avatar-placeholder avatar-lg mx-auto mb-3" style="width: 150px; height: 150px; font-size: 3rem;">
                            {{ user.firstName|first }}{{ user.lastName|first }}
                        </div>
                    {% endif %}
                    
                    <h4>{{ user.fullName }}</h4>
                    <p class="text-muted mb-2">{{ user.email }}</p>
                    
                    <div class="mb-3">
                        {% if user.isAdmin %}
                            <span class="badge bg-danger">Administrateur</span>
                        {% elseif is_granted('ROLE_AUTHOR') %}
                            <span class="badge bg-info">Auteur</span>
                        {% else %}
                            <span class="badge bg-primary">Utilisateur</span>
                        {% endif %}
                        
                        {% if user.isActive %}
                            <span class="badge bg-success">Compte actif</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">En attente d'activation</span>
                        {% endif %}
                    </div>
                    
                    <p class="text-muted small mb-0">
                        <i class="bi bi-calendar me-1"></i>
                        Inscrit le {{ user.createdAt|date('d/m/Y') }}
                    </p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary w-100">
                        <i class="bi bi-pencil me-2"></i>Modifier mon profil
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            {# Pending Collaboration Requests #}
            {% if pendingRequests|length > 0 %}
            <div class="card shadow mb-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-bell me-2"></i>Demandes de collaboration en attente ({{ pendingRequests|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% for request in pendingRequests %}
                    <div class="d-flex justify-content-between align-items-center {% if not loop.last %}mb-3 pb-3 border-bottom{% endif %}">
                        <div>
                            <strong>{{ request.post.title }}</strong>
                            <br>
                            <small class="text-muted">
                                Demandé par {{ request.post.author.fullName }} le {{ request.createdAt|date('d/m/Y') }}
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <form action="{{ path('app_collaboration_accept', {id: request.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ request.id) }}">
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="bi bi-check-lg"></i> Accepter
                                </button>
                            </form>
                            <form action="{{ path('app_collaboration_reject', {id: request.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ request.id) }}">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-x-lg"></i> Refuser
                                </button>
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# All Collaboration Requests #}
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Mes collaborations</h5>
                </div>
                <div class="card-body">
                    {% if allRequests is empty %}
                        <p class="text-muted mb-0">Aucune demande de collaboration pour le moment.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Article</th>
                                        <th>Auteur principal</th>
                                        <th>Date</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for request in allRequests %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_post_show', {slug: request.post.slug}) }}">
                                                {{ request.post.title }}
                                            </a>
                                        </td>
                                        <td>{{ request.post.author.fullName }}</td>
                                        <td>{{ request.createdAt|date('d/m/Y') }}</td>
                                        <td>
                                            <span class="badge {{ request.status.badgeClass }}">
                                                {{ request.status.label }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Statistics #}
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow text-center">
                        <div class="card-body">
                            <i class="bi bi-chat-dots display-4 text-primary mb-2"></i>
                            <h3>{{ user.comments|length }}</h3>
                            <p class="text-muted mb-0">Commentaires</p>
                        </div>
                    </div>
                </div>
                {% if user.isAdmin %}
                <div class="col-md-6">
                    <div class="card shadow text-center">
                        <div class="card-body">
                            <i class="bi bi-file-text display-4 text-success mb-2"></i>
                            <h3>{{ user.posts|length }}</h3>
                            <p class="text-muted mb-0">Articles publiés</p>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
