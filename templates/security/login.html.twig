{% extends 'base.html.twig' %}

{% block title %}Connexion - Mon Blog{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle display-4 text-primary"></i>
                        <h2 class="mt-3">Connexion</h2>
                        <p class="text-muted">Connectez-vous à votre compte</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" 
                                       class="form-control" placeholder="votre@email.com" required autofocus>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" name="_password" id="inputPassword" 
                                       class="form-control" placeholder="Mot de passe" required>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                            <label for="rememberMe" class="form-check-label">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">Pas encore de compte ?</p>
                        <a href="{{ path('app_register') }}" class="btn btn-link">
                            <i class="bi bi-person-plus me-1"></i>Créer un compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
